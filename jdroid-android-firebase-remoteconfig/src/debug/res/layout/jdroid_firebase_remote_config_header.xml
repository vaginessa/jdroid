<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
			  android:layout_height="wrap_content" android:orientation="vertical" android:padding="8dp">

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
		<Button android:id="@+id/fetch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/jdroid_firebaseRemoteConfigFetchNow"></Button>
		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_gravity="center_vertical"
					  android:layout_marginLeft="8dp">
			<TextView android:id="@+id/fetchTimeMillis" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
			<TextView android:id="@+id/lastFetchStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>

	<CheckBox android:id="@+id/mocksEnabled" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/jdroid_firebaseRemoteConfigMocksEnabled" android:layout_marginTop="8dp"/>

</LinearLayout>
