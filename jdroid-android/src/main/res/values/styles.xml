<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:card_view="http://schemas.android.com/apk/res-auto">

	<!-- Texts -->

	<style name="baseText">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="textMicro" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
		<item name="android:textSize">@dimen/textMicro</item>
	</style>

	<style name="textSmall" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceSmall</item>
		<item name="android:textSize">@dimen/textSmall</item>
	</style>

	<style name="textMedium" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceMedium</item>
		<item name="android:textSize">@dimen/textMedium</item>
	</style>

	<style name="textLarge" parent="baseText">
		<item name="android:textAppearance">?android:textAppearanceLarge</item>
		<item name="android:textSize">@dimen/textLarge</item>
	</style>

	<style name="textMediumBold" parent="textMedium">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="textLargeBold" parent="textLarge">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="noResultsText" parent="@style/textMedium">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_gravity">center</item>
	</style>

	<style name="sectionTitle" parent="textMediumBold">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">4dp</item>
	</style>

	<!-- Buttons -->

	<style name="raisedButton">
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@drawable/textview_button_selector</item>
		<item name="android:minWidth">100dp</item>
		<item name="android:minHeight">40dp</item>
	</style>

	<!-- Dialogs -->

	<style name="customDialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
		<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Progress Indicators -->

	<style name="largeWhiteProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">7dp</item>
		<item name="android:indeterminate">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<!-- Borders -->

	<style name="lineGrey">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@color/grey</item>
	</style>

	<!-- Social -->

	<style name="socialButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:typeface">normal</item>
		<item name="android:textSize">@dimen/socialButtonText</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- Nav Drawer -->

	<style name="leftNavDrawer">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_gravity">start</item>
	</style>

	<style name="rightNavDrawer">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_gravity">end</item>
	</style>

	<!-- Update Google Play Services -->

	<style name="updateGooglePlayServicesLegend">
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:gravity">center_horizontal</item>
	</style>

	<!-- Toasts -->

	<style name="TextAppearanceToast">
		<item name="android:fontFamily" tools:targetApi="16">sans-serif-condensed</item>
	</style>

	<!-- CardView -->

	<style name="cardViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="cardBackgroundColor">@android:color/white</item>
		<item name="android:layout_marginTop">@dimen/cardViewMarginTop</item>
		<item name="android:layout_marginBottom">@dimen/cardViewMarginBottom</item>
		<item name="android:layout_marginLeft">@dimen/cardViewMarginLeft</item>
		<item name="android:layout_marginRight">@dimen/cardViewMarginRight</item>
	</style>

	<style name="cardViewClickableStyle" parent="@style/cardViewStyle">
		<item name="android:foreground">?android:attr/selectableItemBackground</item>
	</style>

	<style name="cardViewInner">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="cardViewTitle" parent="@style/textMedium">
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginBottom">4dp</item>
	</style>

</resources>